<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmployeeListActivity" >

    <Button
        android:id="@+id/btnThemNhanVien"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/btn_shape_them_nhan_vien"
        android:padding="8dp"
        android:text="Text Selector"
        android:textColor="@color/btn_txt_selector" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/studentsList"
        android:layout_below="@+id/btnThemNhanVien"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>